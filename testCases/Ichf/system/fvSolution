        tolerance       1e-06;
        relTol          1e-06;
    }

    G
    {
        $p;
        tolerance       1e-05;
        relTol          0.1;
    }

    GFinal
    {
        $p;
        tolerance       1e-05;
        relTol          0.1;
    }
}


PIMPLE
{
    momentumPredictor yes;
    nOuterCorrectors  2;
    nCorrectors       2;
    nNonOrthogonalCorrectors 1;
}


