        preconditioner  DILU;
        tolerance       1e-06;
        relTol          1e-05;

    }

    Ts
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-6;
        relTol           0.1;
    }

    rhos
    {
        solver          PCG;
