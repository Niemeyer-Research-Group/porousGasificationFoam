solvers
{
    rho
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-06;
        relTol          1e-05;
    }


    rhoFinal
    {
        $rho;
        tolerance       1e-06;
        relTol          0;
    }


    "(p|pKin)"
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-6;
        relTol           0.05;
    }


    "(p|pKin)Final"
    {
        $p;
        tolerance        1e-7;
        relTol           0.01;
    }


    "(U|k|epsilon|h)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0.1;
    }

    "(U|k|epsilon|h)Final"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-07;
        relTol          0.1;
    }

    "(Yi|Ys|porosity)"
    {
    //    $hsFinal;

        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          1e-05;

    }

    "(Yi|Ys|porosity)Final"
    {
    //    $hsFinal;

